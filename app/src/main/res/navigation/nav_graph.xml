<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="android.coderrrk.self_employedservice.presentation.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_authenticationFragment2"
            app:destination="@id/authenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/authenticationFragment"
        android:name="android.coderrrk.self_employedservice.presentation.authentication.AuthenticationFragment"
        android:label="AuthenticationFragment" >
        <action
            android:id="@+id/action_authenticationFragment_to_singInFragment"
            app:destination="@id/singInFragment" />
        <action
            android:id="@+id/action_authenticationFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>
    <activity
        android:id="@+id/mainActivity"
        android:name="android.coderrrk.self_employedservice.presentation.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/singInFragment"
        android:name="android.coderrrk.self_employedservice.presentation.authentication.SingInFragment"
        android:label="SingInFragment" >
        <action
            android:id="@+id/action_singInFragment_to_passwordRecoveryFragment"
            app:destination="@id/passwordRecoveryFragment" />
        <action
            android:id="@+id/action_singInFragment_to_userWindowRootFragment"
            app:destination="@id/userWindowRootFragment" />
        <action
            android:id="@+id/action_singInFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/passwordRecoveryFragment"
        android:name="android.coderrrk.self_employedservice.presentation.authentication.PasswordRecoveryFragment"
        android:label="PasswordRecoveryFragment" >
        <action
            android:id="@+id/action_passwordRecoveryFragment_to_singInFragment"
            app:destination="@id/singInFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="android.coderrrk.self_employedservice.presentation.authentication.RegistrationFragment"
        android:label="RegistrationFragment" >
        <action
            android:id="@+id/action_registrationFragment_to_singInFragment"
            app:destination="@id/singInFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_authenticationFragment"
            app:destination="@id/authenticationFragment" />
    </fragment>
    <fragment
        android:id="@+id/userWindowRootFragment"
        android:name="android.coderrrk.self_employedservice.presentation.userwindows.UserWindowRootFragment"
        android:label="UserWindowRootFragment" >
        <action
            android:id="@+id/action_userWindowRootFragment_to_userWindowProfileFragment"
            app:destination="@id/userWindowProfileFragment" />
        <action
            android:id="@+id/action_userWindowRootFragment_to_userWindowHomeFragment"
            app:destination="@id/userWindowHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/userWindowProfileFragment"
        android:name="android.coderrrk.self_employedservice.presentation.userwindows.UserWindowProfileFragment"
        android:label="UserWindowProfileFragment" />
    <fragment
        android:id="@+id/userWindowHomeFragment"
        android:name="android.coderrrk.self_employedservice.presentation.userwindows.UserWindowHomeFragment"
        android:label="user_window_home_fragment"
        tools:layout="@layout/user_window_home_fragment" >
        <action
            android:id="@+id/action_userWindowHomeFragment_to_userWindowHomeItemFragment"
            app:destination="@id/userWindowHomeItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/userWindowHomeItemFragment"
        android:name="android.coderrrk.self_employedservice.presentation.userwindows.UserWindowHomeItemFragment"
        android:label="user_window_home_item_fragment"
        tools:layout="@layout/user_window_home_item_fragment" />
</navigation>